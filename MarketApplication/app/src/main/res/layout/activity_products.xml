<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Products">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="184dp"
        android:layout_height="191dp"
        android:layout_marginStart="4dp"
        android:onClick="selectimage1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ikram" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="186dp"
        android:layout_height="44dp"
        android:text="İkram  :  25TL"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintHorizontal_bias="0.34"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:layout_constraintLeft_toRightOf="@+id/imageView5"
        />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="184dp"
        android:layout_height="191dp"
        android:onClick="selectimage2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/olala" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="184dp"
        android:layout_height="42dp"
        android:text="Olala : 7.5TL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imageView5"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="184dp"
        android:layout_height="191dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="304dp"
        android:onClick="selectimage3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ülker1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="186dp"
        android:layout_height="47dp"
        android:text="gofret : 5 TL"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="184dp"
        android:layout_height="191dp"
        android:onClick="selectimage4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/ülker2" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="186dp"
        android:layout_height="47dp"
        android:text="gofret : 5 TL"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="188dp"
        android:layout_height="49dp"
        android:text="napoliten : 10TL"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        tools:layout_editor_absoluteY="429dp" />

    <Button
        android:id="@+id/productButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="productButtonOnClick"
        android:text="Ürünleri Ekle"
        tools:layout_editor_absoluteX="129dp"
        tools:layout_editor_absoluteY="539dp" />

    <Button
        android:id="@+id/basketButton"
        android:layout_width="106dp"
        android:layout_height="48dp"
        android:onClick="basketClickButton"
        android:text="Basket"
        tools:layout_editor_absoluteX="296dp"
        tools:layout_editor_absoluteY="678dp" />
</androidx.constraintlayout.widget.ConstraintLayout>